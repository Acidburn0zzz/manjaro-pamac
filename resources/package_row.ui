<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="PamacPackageRow" parent="GtkListBoxRow">
    <property name="child">
      <object class="GtkBox" id="main_box">
        <property name="margin-start">18</property>
        <property name="margin-end">18</property>
        <property name="margin-top">18</property>
        <property name="margin-bottom">18</property>
        <property name="spacing">18</property>
        <child>
          <object class="GtkImage" id="app_icon">
            <property name="pixel-size">64</property>
            <style>
              <class name="icon-dropshadow"/>
            </style>
          </object>
        </child>
        <child>
          <object class="GtkBox" id="second_box">
            <property name="orientation">vertical</property>
            <property name="spacing">6</property>
            <property name="homogeneous">1</property>
            <child>
              <object class="GtkBox" id="name_box">
                <property name="spacing">6</property>
                <child>
                  <object class="GtkLabel" id="name_label">
                    <property name="ellipsize">end</property>
                    <property name="single-line-mode">1</property>
                    <property name="xalign">0</property>
                    <attributes>
                      <attribute name="weight" value="bold"/>
                    </attributes>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="old_version_label">
                    <property name="ellipsize">end</property>
                    <property name="single-line-mode">1</property>
                    <property name="xalign">0</property>
                    <property name="visible">0</property>
                    <style>
                      <class name="old-version-label"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="version_label">
                    <property name="ellipsize">end</property>
                    <property name="single-line-mode">1</property>
                    <property name="xalign">0</property>
                    <style>
                      <class name="version-label"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="desc_label">
                <property name="use-markup">1</property>
                <property name="wrap">1</property>
                <property name="ellipsize">end</property>
                <property name="xalign">0</property>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="repo_label">
                <property name="ellipsize">end</property>
                <property name="single-line-mode">1</property>
                <property name="xalign">0</property>
                <style>
                  <class name="dim-label"/>
                  <class name="size-label"/>
                </style>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkBox" id="button_box">
            <property name="halign">end</property>
            <property name="hexpand">1</property>
            <property name="valign">center</property>
            <property name="orientation">vertical</property>
            <property name="spacing">6</property>
            <child>
              <object class="GtkToggleButton" id="action_togglebutton">
                <property name="halign">center</property>
                <property name="valign">center</property>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="size_label">
                <style>
                  <class name="dim-label"/>
                  <class name="size-label"/>
                </style>
              </object>
            </child>
          </object>
        </child>
      </object>
    </property>
  </template>
</interface>
